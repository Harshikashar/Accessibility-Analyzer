{
  "manifest_version": 3,
  "name": "Accessibility Analyzer Pro",
  "version": "2.0",
  "description": "Comprehensive WCAG 2.1 accessibility analyzer with detailed reporting and element highlighting",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs" 
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["utils/*", "icons/*","expand.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}